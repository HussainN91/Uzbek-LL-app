{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "checkJs": true,
    "strict": false,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "__pycache__",
    "*.py",
    "vocab_cards_u*.js",
    "vocab_card_renderer_v2.js",
    "vocab_gap_hover.js",
    "DATA_TEMPLATE_SCHEMA.js"
  ]
}
